{
  "name": "xta",
  "version": "1.0.0",
  "description": "Server with exchange rate REST and GraphQL endpoints",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "clean": "docker-compose -f docker-compose.yml kill && docker-compose -f docker-compose.yml rm -f",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "start": "nest start",
    "test": "nyc ts-mocha -p tsconfig.json src/**/*.spec.ts test/**/*.spec.ts",
    "test:local": "yarn up-deps && yarn test && yarn clean",
    "up-deps": "yarn clean && docker-compose -f docker-compose.yml up -d mongo redis && sleep 10"
  },
  "author": "Wesley Chong",
  "devDependencies": {
    "@nestjs/testing": "^8.0.6",
    "@types/chai": "^4.2.21",
    "@types/ioredis": "^4.26.7",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.1",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^9.0.3",
    "nock": "^13.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.1.6",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/terminus": "^7.2.0",
    "agenda": "^4.2.1",
    "apollo-server-express": "^2.25.2",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "graphql": "^15.5.1",
    "helmet": "^4.6.0",
    "ioredis": "^4.27.8",
    "joi": "^17.4.2",
    "joiful": "^3.0.2",
    "mongodb": "^4.1.0",
    "reflect-metadata": "^0.1.13"
  },
  "nyc": {
    "exclude": [
      "coverage",
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "all": true,
    "reporter": [
      "html",
      "text-summary",
      "json-summary"
    ]
  }
}
